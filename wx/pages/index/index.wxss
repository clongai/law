/**index.wxss**/

.page-top-box {
  width: 100%;
  height: 350rpx;
  /* background-image: linear-gradient(-90deg, #00f9f7 0%, #250e8a 100%); */
}

.page-top-box image {
  width: 100%;
  height: 100%;
}

.page-search-box {
  width: 100%;
  padding: 0 15px;
}
.searchbar-refer{
  margin-top: 0;
  font-size: 14px;
  position:absolute;
  z-index:2;
  width:100%;
}
.searchbar-refer:before{
    display: none;
}

.searchbar-result {
  background-color: initial;
  margin-top: 15px;
  font-size: 14px;
}

.searchbar-result .weui-cell {
  padding-left: 15px;
  margin-bottom: 15px;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 1px 1px 5px rgb(230, 227, 227);
}

.searchbar-result .weui-cell:before {
    border-top: none;
}

.weui-cell{
    padding: 12px 15px 12px 35px;
}

.weui-search-bar {
  width: 100%;
  background: #f8f8f8;
  border: none;
  padding: 15px 0 5px;
  font-size: 14px;
}

.page-search-box .weui-search-bar__label {
  height: 40px;
}

.page-search-box .weui-icon-search {
  height:40px;
  display:inline-block;
  line-height:40px;
}

.page-search-box .weui-search-bar__text {
  height:40px;
  line-height:40px;
  font-size: 14px;
}

.page-search-box .weui-search-bar__input {
  display:block;
  height:40px;
  line-height:40px;
  min-height: 40px;
  font-size: 14px;
}

.page-search-box .weui-icon-search_in-box {
  top: 10px;
  font-size: 14px;
}

.page-search-box .weui-search-bar__cancel-btn {
  line-height: 40px;
}

.order_card { 
  padding: 30rpx;
  margin: 20rpx;
  background: #fff;
}
.order_card_row {
  display: flex;
}
.order_title{
}

.order_content{
  margin-left: 40rpx;
}

.warning{
  color: #ec971f
}

.sucess{
  color: #5cb85c
}

.weui-search-bar__cancel-btn {
  color: #0191f1;
}

.result-card {
  width: 100%;
  color: #bbbbbb;
  font-family: 'PingFangSC-Regular';
}

.result-card-top {
  position: relative;
  width: 100%;
  padding-bottom: 10px;
}

.result-card-top:after {
  content: " ";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-width: 1px 1px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 0px;
}

.result-card-id {
  color: rgb(245, 79, 79);
}

.result-card-name {
  position: relative;
  padding-bottom: 10px;
  color: #3F576B;
}

.result-card-status {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 13px;
  color: #bbbbbb;
}

.result-card-appeal {
  padding-bottom: 7px;
  color: #3F576B;
}

.result-card-place {
  display: flex;
  align-items: center;
  padding-bottom: 5px;
}

.result-card-place-icon {
  display: inline-block;
  width: 23px;
  height: 18px;
  padding-right: 5px;
}

.result-card-place-icon image {
  width: 100%;
  height: 100%;
}

.result-card-place-text {
  display: inline-block;
}

.result-card-status.success,
.result-card-status.firstTrailToPay,
.result-card-status.firstTrailPayed,
.result-card-status.finalTrailToPayPre,
.result-card-status.finalTrailToPaySuffix,
.result-card-status.finalTrailPayed {
  color: #3FA7F8;
}

.result-card-status.fail {
  color: #FA7564;
}

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.pay-btn-box {
  text-align: right;
  padding-right: 10px;
}

.pay-btn-box button {
  display: inline-block;
  padding: 20rpx 60rpx;
  font-size: 13px;
}

