/* pages/listDetail/listDetail.wxss */

.list-detail-page {
  font-size: 14px;
  background: #fff;
  border-top: 1rpx solid #d9d9d9;
}

.list-detail-inner {
  padding: 0 15px 0 0;
}

view.weui-cells {
  margin-top: 0;
}

input.weui-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: 14px;
  color: inherit;
  height: 20px;
  line-height: 20px;
  min-height: 20px;
}

.weui-more, .weui-more-multi, .picker, .weui-collapse {
  height: 20px;
}

.weui-more::after, .weui-more-multi::after {
  content: " ";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 10px;
}

.weui-uploader__files {
  width: 100%;
  height: 77px;
}

.uploader-text {
  float: left;
  font-size: 14px;
}

.uploader-icon {
  float: left;
  position: relative;
  width: 40px;
  height: 40px;
}

.uploader-icon:before,
.uploader-icon:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.uploader-icon:before {
  width: 2px;
  height: 20px;
}

.uploader-icon:after {
  width: 20px;
  height: 2px;
}
view.file-icon {
  position: absolute;
  width: 60rpx;
  height:100%;
  display:flex;
  align-items:center;
}

.uploader-content {
  position:relative;
  display: inline-block;
  width: 100%;
  margin-left: 60rpx;
  padding-top: 4px;
}

.content-name {
  width:100%;
  height: 20px;
  line-height: 20px;
  text-overflow:hidden;
  overflow:hidden;
  position:absolute;
}

.content-size {
  position: absolute;
  top: 20px;
  line-height: 20px;
}

.button-sp-area {
  padding: 15px 0 50px 15px;
}

button.weui-btn {
  padding: 20rpx 0;
  color: #fff;
  border-radius: 50rpx;
  /* background-image: linear-gradient(-90deg, #8efdfc 0%, #3ac2eb 100%); */
  /* background-image: linear-gradient(-90deg, #79e1f7 0%, #3ac2eb 100%); */
  background-image: linear-gradient(-134deg, #75DDF5 0%, #43BBE9 100%);
  box-shadow: 3px 13px 11px -11px rgba(66,186,233,0.59);
}
