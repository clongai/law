/* pages/payedOrderDetail/payedOrderDetail.wxss */
.payed-detail {
  height: 100%;
  background: #fff;
}

.payed-head {
  height: 390rpx;
  padding: 30rpx 40rpx 0 40rpx;
  background: #325282;
  color: #fff;
}

.payed-case-id {
  text-align: right;
  padding-bottom: 30rpx;
}

.payed-case-id text {
  padding-left: 20rpx;
  font-size: 13px;
}

.payed-lawyer-img {
  float: left;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background: #fff;
}

.payed-lawyer-img image {
  width: 100%;
  height: 100%;
}

.payed-lawyer-info {
  float: right;
  width: calc(100% - 130rpx);
  padding-left: 30rpx;
}

.payed-laywer-info-top {
  padding-bottom: 15rpx;
}

.payed-laywer-name {
  padding-right: 10rpx;
  font-size: 16px;
}

.payed-laywer-degree {
  font-size: 11px;
  color: #80A2C8;
}

.payed-lawyer-bottom {
  color: #B6C8DD;
  font-size: 13px;
}

.payed-content {
  padding: 50rpx 50rpx 40rpx;
}

.payed-message {
  padding-bottom: 20rpx;
  line-height: 31px;
  font-size: 15px;
  font-weight: 300;
  color: rgb(80, 80, 80);
}

.payed-data-list {
  padding: 25rpx 40rpx;
  background: rgb(243, 243, 243);
  font-size: 14px;
  line-height: 31px;
  font-weight: 300;
  color: #3F576B;
}

.list-item-label {
  display: inline-block;
  width: 160rpx;
}

.list-item-text {
  display: inline-block;
  width: calc(100% - 160rpx);
}

.payed-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 140rpx 50rpx 60rpx;
}

.payed-footer-btn {
  display: inline-block;
  width: 50%;
}

.case-back {
  padding-right: 40rpx;
}

.case-process {
  padding-left: 40rpx;
}

.payed-footer-btn button {
  padding: 18rpx 0;
  font-size: 14px;
  font-weight: 300;
}